<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

  <!-- ========== Form Bean Definitions ================================== -->
  <form-beans>
  
  	<!-- ===== application ===== -->
    <form-bean name="generic.pageSystemForm" 
               type="org.opencustomer.webapp.module.generic.PageSystemForm"/>
               
    <form-bean name="generic.deleteForm" 
               type="org.opencustomer.framework.webapp.action.DeleteForm"/>
               
    <form-bean name="generic.dynamicListForm" 
               type="org.opencustomer.webapp.module.generic.DynamicListForm"/>
               
   	<!-- ========== add  ========== -->
    <form-bean name="generic.add.usergroup" 
               type="org.opencustomer.webapp.module.generic.add.AddUsergroupForm"/>
    <form-bean name="generic.add.company" 
               type="org.opencustomer.webapp.module.generic.add.AddCompanyForm"/>
    <form-bean name="generic.add.person" 
               type="org.opencustomer.webapp.module.generic.add.AddPersonForm"/>
    <form-bean name="generic.add.user" 
               type="org.opencustomer.webapp.module.generic.add.AddUserForm"/>               
  </form-beans>

</struts-config>
